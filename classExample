// 20210924-lesson4.1（扩展）数据输入输出
#include <iostream>
using namespace std;
 
int main(){
    // 声明char类型变量
    char ch, ch2;
    ch = getchar();
    ch2 = getchar();
    cout << "ch = " << ch << endl;
    cout << "ch2 = " << ch2 << endl;
    return 0;
}

#include <iostream>
using namespace std;
 
int main(){
    // 声明char类型变量
//  char ch;
//  ch = getchar();
//  putchar(ch);
    char ch = 'B';
    putchar(ch);
    // 用转义字符输出字母'B'
    putchar('\x42');
     
    // 用十六进制ASCII码值输出字母'B'
    putchar(0x42);
     
    putchar(66); 
    return 0;
}
