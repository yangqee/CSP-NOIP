#include <iostream>
using namespace std;
 
int main(){
    int a, b;
    cin >> a >> b;
    cout << a+b << endl;
    return 0;
}

#include <iostream>
using namespace std;
 
int main(){
    int a = 1;
    cout << (a = 2) << endl;
//  int b, c;
//  cin >> b + c;
    return 0;
}
