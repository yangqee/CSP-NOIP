#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <iomanip>
#include <cstdio>
using namespace std;
 
int main() {
    // round
    // ceil 
    // floor
    cout << round(3.5) << endl;
    cout << ceil(3.5) << endl;
    cout << floor(3.5) << endl;
    cout << endl;
    cout << round(-3.5) << endl;
    cout << ceil(-3.5) << endl;
    cout << floor(-3.5) << endl;
    return 0;
}
